# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/viral_clip_finder

# Or use Supabase
# DATABASE_URL=postgresql://postgres:[PASSWORD]@[PROJECT].supabase.co:5432/postgres

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:5173

# Claude Agent SDK Authentication
# No API key needed - uses Claude Max authentication via `claude login`
# Make sure you've run: claude login

# HashiCorp Vault (Optional - for production)
VAULT_ADDR=http://127.0.0.1:8200
VAULT_TOKEN=dev-token
VAULT_ENABLED=false

# Processing Configuration
MAX_CONCURRENT_CHUNKS=5
TRANSCRIPT_CHUNK_SIZE=180
TRANSCRIPT_CHUNK_OVERLAP=30

# Development/Production
NODE_ENV=development
